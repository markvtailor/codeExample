<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center_horizontal">

    <com.wallpaperscraft.keby.app.ui.views.ControlBarView
        android:id="@+id/control_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.wallpaperscraft.keby.app.ui.views.KeyboardView
        android:id="@+id/keyboard_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/control_bar" />

    <com.wallpaperscraft.keby.app.ui.views.ClipboardView
        android:id="@+id/clipboard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/keyboard_view"
        app:layout_constraintEnd_toEndOf="@id/keyboard_view"
        app:layout_constraintStart_toStartOf="@id/keyboard_view"
        app:layout_constraintTop_toTopOf="@id/keyboard_view" />

    <com.wallpaperscraft.keby.app.ui.views.EmojiView
        android:id="@+id/emoji"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/keyboard_view"
        app:layout_constraintEnd_toEndOf="@id/keyboard_view"
        app:layout_constraintStart_toStartOf="@id/keyboard_view"
        app:layout_constraintTop_toTopOf="@id/keyboard_view" />

</androidx.constraintlayout.widget.ConstraintLayout>