<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_2"
    android:orientation="vertical"
    android:paddingStart="18dp"
    android:paddingTop="8dp"
    android:paddingEnd="18dp"
    android:paddingBottom="20dp">

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/settings_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleY="0.85"
        android:scaleX="0.85"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:thumbTint="@color/switch_color" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/settings_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/golos_text_regular"
        android:textColor="@color/white"
        android:textSize="@dimen/settings_label_text_size"
        app:layout_constraintBottom_toBottomOf="@id/settings_switch"
        app:layout_constraintEnd_toStartOf="@id/settings_switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/settings_switch" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/settings_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:fontFamily="@font/golos_text_regular"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/settings_description_text_size"
        app:layout_constraintTop_toBottomOf="@id/settings_label" />

</androidx.constraintlayout.widget.ConstraintLayout>